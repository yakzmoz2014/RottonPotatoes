
  <tr>
    <td><%= image_tag movie.image.url(:medium, class: "movie_image")%></td>
    <td><%= link_to(movie.title, movie_path(movie)) %></td>
    <td>
      <% if current_user && current_user == movie.user %>
        <%= link_to("编辑", edit_movie_path(movie), class: "btn btn-sm btn-default")%>
        <%= link_to("删除",movie_path(movie),    class: "btn btn-sm btn-danger",
                    method: :delete, data: { confirm: "Are you sure?" } )%>
      <% end %>
    </td>
  </tr>
