<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
        <% if current_user && current_user.is_favorite_of?(@movie)%>
          <label class="label label-success">已收藏</label>
          <%= link_to("取消收藏", not_favorite_movie_path(@movie), method: :post, class: "btn btn-danger") %>
        <% else %>
          <label class="label label-warning">未收藏</label>
          <%= link_to("收藏电影", favorite_movie_path(@movie), method: :post, class: "btn btn-success") %>
        <% end %>
    </span>

      <%= link_to("写影评", new_movie_post_path(@movie), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @movie.user %>
      <%= link_to("编辑", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>

  <div class="container-fluid">
    <div class="col-md-3">
      <% if @movie.image.present?%>
        <%= image_tag @movie.image.url(:medium, class: "thumbnail")%>
      <% else %>
        <%= image_tag("http://placehold.it/300x300&text= No Pic", class: "thumbnail")%>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2><%= @movie.title %></h2>
      <p><%= @movie.description %></p>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>影评内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
