<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_favorite_of?(@movie)%>
        <label class="label label-success">Favorite</label>
      <% else %>
        <label class="label label-warning">Not Favorite</label>
      <% end %>
    </span>

    <%= link_to("Write a Review", new_movie_post_path(@movie), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @movie.user %>
      <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <%= image_tag @movie.image.url(:thumb)%>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>影评内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
