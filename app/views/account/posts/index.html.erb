<div class="col-md-12">

  <h2 class="text-center"> 我发表过的影评 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 内容 </th>
        <th> 影片名 </th>
        <th> 最后更新 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.movie.title %> </td>
          <td> <%= post.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>



</div>
